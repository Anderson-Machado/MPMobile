<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MPMobile.Configuration"
             Title="">

    <StackLayout Padding="20">
        <Label Text="Insira o a url da API" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"/>

        <Entry x:Name="txtUrlBase"  Placeholder="http://127.0.0.1" FontSize="20" Margin="0,0,0,10"/>

        <Label Text="Equipamento" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"/>

        <Entry x:Name="txtEquipamento" Keyboard="Numeric" Placeholder="" FontSize="20" Margin="150,0,150,50" HorizontalTextAlignment="Center"/>

        
        <Button 
            CornerRadius ="40"
            WidthRequest="290"
        Margin="0,10,0,200" 
            Clicked="Button_Clicked"
        Text="Salvar" HorizontalOptions="Center"/>

        <ActivityIndicator x:Name="loadingIndicator" IsRunning="false" IsVisible="false" Color="Black"/>
        <Label x:Name="lbQuantidade" Text="" FontSize="20" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"/>
        <Switch x:Name="txtEnvio" Scale="2" HorizontalOptions="CenterAndExpand" Margin="0,0,0,50" IsToggled="false" Toggled="OnSwitchToggledOffLine"/>

    </StackLayout>


</ContentPage>